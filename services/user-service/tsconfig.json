{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "../../dist/services/user-service",
    "paths": {
      "@shared/*": ["../../shared/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*","../../shared/src/**/*"],
  "exclude": ["node_modules", "dist"]
}

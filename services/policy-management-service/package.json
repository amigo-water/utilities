    "helmet": "^7.1.0",
    "pg": "^8.11.0",
    "sequelize": "^6.35.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.21",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9"
  }

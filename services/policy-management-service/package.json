{
  "name": "policy-management-service",
  "version": "1.0.0",
  "description": "Service for managing policies, tariffs, and rules",
  "main": "src/index.js",
  "scripts": {
    "start": "env-cmd -f .env.dev node dist/index.js",
    "build": "tsc",
    "dev": "env-cmd -f .env.local ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/index.ts",
    "prod": "env-cmd -f .env.prod ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "json-logic-js": "^2.0.5",
    "pg": "^8.11.0",
    "sequelize": "^6.35.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/sequelize": "^4.28.20",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
